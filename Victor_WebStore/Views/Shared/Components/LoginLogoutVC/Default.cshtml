@if (User.Identity.IsAuthenticated)
{
<span><a href="#"> Здравствуйте, @User.Identity.Name</a> </span>
<a asp-action="Logout" asp-controller="account" class="btn btn-default">Выход</a>
}
else
{
    <div>
        <a asp-action="login" asp-controller="account" class="btn btn-default">Вход</a> &nbsp;
        <a asp-action="register" asp-controller="account" class="btn btn-default" >Регистрация</a>
    </div>
}