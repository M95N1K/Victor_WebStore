@model CatalogViewModel
@{
    ViewData["Title"] = "Shop";
}
@await Html.PartialAsync("Partial/_Advertisement")

<section>
    <div class="container">
        <vc:bread-crumbs/>
        <div class="row">
            <div class="col-sm-3">
                @await Html.PartialAsync("Partial/_LeftSidebar");
            </div>

            <div class="col-sm-9 padding-right">
                <div class="features_items">
                    <!--features_items-->
                    @await Html.PartialAsync("Partial/_ProductItems", Model.Products)

                    <paging page-view-model="Model.PageViewModel"
                            page-action="Shop" 
                            page-url-categoryId="@Model.CategoryId" 
                            page-url-brandId="@Model.BrandId"
                            page-url-pageSize="@Context.Request.Query["pageSize"]">
                    </paging>
                </div><!--features_items-->
            </div>
        </div>
    </div>
</section>
