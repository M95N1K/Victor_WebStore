@model CatalogViewModel
@{
    ViewData["Title"] = "Shop";
}
@await Html.PartialAsync("Partial/_Advertisement")

<section>
    <div class="container">
        <vc:bread-crumbs />
        <div class="row">
            <div class="col-sm-3">
                @await Html.PartialAsync("Partial/_LeftSidebar");
            </div>

            <div class="col-sm-9 padding-right">
                
                    
                    <div id="catalog_items_container">
                        <partial name="Partial/_ProductItems" model="Model.Products" />
                    </div>

                    <paging page-view-model="Model.PageViewModel"
                            page-action="Shop"
                            page-url-categoryId="@Model.CategoryId"
                            page-url-brandId="@Model.BrandId"
                            page-url-pageSize="@Context.Request.Query["pageSize"]">
                    </paging>
            </div>
        </div>
    </div>
</section>

@section Script
{
    <script src="~/js/Catalog/CatalogLogick.js"></script>
    <script src="~/js/loadingoverlay.min.js"></script>
    <script>
        $(function() {
            Catalog.init({
                getViewLink: "@Url.Action("GetItemsAJAX", "Catalog")"
            });
        })
    </script>
}
