@model RegisterUserViewModel
@{
    ViewData["Title"] = "Регистрация";
}

<section id="form">
    <!--form-->
    <div class="container">
        <div class="row">
            <div class="col-sm-4">
                <div class="signup-form">
                    <!--sign up form-->
                    <h2>Регистрация нового пользователя</h2>
                    <form asp-action="Register" asp-antiforgery="true">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <input asp-for="UserName" placeholder="Имя пользователя" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                        <input asp-for="Email" placeholder="Электронная почта" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <input asp-for="Password" placeholder="Пароль" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <input asp-for="ConfirmPassword" placeholder="Повторите пароль" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                        <button type="submit" class="btn btn-default">Зарегестрироваться</button>
                    </form>
                </div><!--/sign up form-->
            </div>
        </div>
    </div>
</section><!--/form-->

@section Script
{
    <partial name="Partial/_ValidationScriptsPartial" />
}
