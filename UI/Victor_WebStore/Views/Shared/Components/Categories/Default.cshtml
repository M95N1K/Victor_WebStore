@model SelectableCategoruViewModel

<h2>Категории</h2>
<div class="panel-group category-products" id="accordian">
    <!--category-productsr-->
    @foreach (var parentCategory in Model.Categories)
    {
        if (parentCategory.ChildCategories.Count > 0) // если есть дочерние категории
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordian" href="#@parentCategory.Name.ToLower()">
                            <span class="badge pull-right"><i class="fa fa-plus"></i></span>
                            @parentCategory.Name
                        </a>
                    </h4>
                </div>
                <div id="@parentCategory.Name.ToLower()" class="panel-collapse collapse @(parentCategory.Id == Model.ParentCategory ? " in" : null)">
                    <div class="panel-body">
                        <ul>
                            @foreach (var childCategory in parentCategory.ChildCategories)
                            {
                                <li @(childCategory.Id == Model.CurrentCategory ? "class=active" : null)><a asp-controller="catalog" asp-action="shop" asp-route-categoryId="@childCategory.Id">@childCategory.Name</a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        }
        else // если нет дочерних элементов
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title"><a href="#">@parentCategory.Name</a></h4>
                </div>
            </div>
        }
    }

</div><!--/category-products-->
