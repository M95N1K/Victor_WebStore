@model OrderViewModel
<form method="post" asp-antiforgery="true" asp-action="Chekout">
    <div class="col-sm-6">
        <input asp-for="Name" placeholder="@nameof(Model.Name)" />
        <span asp-validation-for="Name" class="text-danger"></span>

        <input asp-for="Phone" placeholder="@nameof(Model.Phone)" />
        <span asp-validation-for="Phone" class="text-danger"></span>

        <input asp-for="Address" placeholder="@nameof(Model.Address)" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    @{ 
        ViewData.TryGetValue("sumCart", out var sumObj);
    }
    <div class="col-sm-6">
        <div class="total_area">
            @if(sumObj != null)
            {
                var sum = (decimal)sumObj;
                <ul>
                    <li>Итого <span class="cart_total_price total_price"><vc:total-price total-price="@sum" /></span> </li>
                </ul>
                if(sum > 0)
                {
                    <input type="submit" value="Оформить заказ" class="btn btn-primary check_out" />
                }
            }
        </div>
    </div>
</form>