@model EmployeeViewModel
@{
    ViewData["Title"] = Model.Name;
}
<div class="details" style="display: flex">
    <div>
        <img src="#" alt="Foto" style="border: 1px solid black" />
    </div>
    <table class="table table-border">
        <tr>
            <td>Id</td>
            <td>@Model.Id</td>
        </tr>
        <tr>
            <td>Имя</td>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <td>Возраст</td>
            <td>@Model.Age</td>
        </tr>
    </table>
</div>
@Html.ActionLink("Назад", "Employee", "Employee", null, new { @class = "btn btn-primary" })
